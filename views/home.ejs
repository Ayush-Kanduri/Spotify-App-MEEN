<link rel="stylesheet" href="/css/home.css" />
<% if(locals.user){ %>
<h1 style="color: white">Welcome, <%= user.name %></h1>
<br />
<a href="/users/logout" style="color: white">Logout</a>
<br />
<% if(locals.playlists){ %>
<ul>
	<% for(const playlist of playlists){ %>
	<li style="color: white"><%= playlist.name %></li>
	<% } %>
</ul>
<% } %> <% }else{ %>
<div class="login">
	<img
		src="https://getheavy.com/wp-content/uploads/2019/12/spotify2019-830x350.jpg"
		alt="spotify-logo"
		class="login__logo"
	/>
	<div class="logo__btns">
		<a href="/users/auth/spotify" class="login__spotifyBtn">
			<img src="/images/spotify-logo.png" alt="Sign in with Spotify" />
			Login With Spotify
		</a>
		<a href="/users/auth/google" class="login__googleBtn">
			<img src="/images/google-logo.jpg" alt="Sign in with Google" />
			Login With Google
		</a>
		<a href="/users/login" class="login__btn">
			<i class="fa-solid fa-envelope"></i>
			Login With Email
		</a>
	</div>
</div>
<% } %>

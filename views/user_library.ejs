<link rel="stylesheet" href="/css/home.css" />
<script defer src="/js/home.js"></script>

<% if(locals.user){ %>
<div class="player">
	<div class="player__body">
		<%- include('_sidebar.ejs') -%> <%- include('_library.ejs') -%>
	</div>
	<%- include('_footer.ejs') -%>
</div>
<% }else{ %>
<div class="login">
	<img
		src="https://getheavy.com/wp-content/uploads/2019/12/spotify2019-830x350.jpg"
		alt="spotify-logo"
		class="login__logo"
	/>
	<div class="logo__btns">
		<a href="/users/auth/spotify" class="login__spotifyBtn">
			<img src="/images/spotify-logo.png" alt="Sign in with Spotify" />
			Login With Spotify
		</a>
		<a href="/users/auth/google" class="login__googleBtn">
			<img src="/images/google-logo.jpg" alt="Sign in with Google" />
			Login With Google
		</a>
		<a href="/users/login" class="login__btn">
			<i class="fa-solid fa-envelope"></i>
			Login With Email
		</a>
	</div>
</div>
<% } %>
